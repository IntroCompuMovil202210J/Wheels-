<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciarViajeActivity"
    android:background="@drawable/fondo">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/color_borde_layout_inv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Elige un viaje para iniciar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:theme="@style/textoTitulosInicio" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="@drawable/color_borde_input"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.127" >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPruebaInicioViaje"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/gris"
            android:text="Viaje Universidad    -     7AM"
            android:textColor="@color/black"
            app:icon="@drawable/destino"
            app:iconTint="@color/black"
            android:textAlignment="center"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/gris"
            android:text="Viaje Norte    -     8AM"
            android:textColor="@color/black"
            app:icon="@drawable/destino"
            app:iconTint="@color/black"
            android:textAlignment="center"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>